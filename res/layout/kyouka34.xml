<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hennano"
    android:orientation="vertical" >

    <Button
        android:id="@+id/modoru8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="19dp"
        android:layout_marginTop="26dp"
        android:background="#FFFF00"
        android:minHeight="110dp"
        android:minWidth="20dp"
        android:text="もどる"
        android:textSize="25dp"
        android:width="40dp" />

    <Button
        android:id="@+id/hukokugo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hurika"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="34dp"
        android:layout_marginLeft="38dp"
        android:background="#F08080"
        android:minHeight="60dp"
        android:minWidth="100dp"
        android:text="こくご" />

    <Button
        android:id="@+id/hurika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modoru8"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@+id/textView1"
        android:background="#32CD32"
        android:minHeight="60dp"
        android:minWidth="100dp"
        android:text="りか" />

    <Button
        android:id="@+id/husyakai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/modoru8"
        android:layout_alignTop="@+id/husansuu"
        android:layout_marginTop="29dp"
        android:background="#FFD700"
        android:minHeight="60dp"
        android:minWidth="100dp"
        android:text="しゃかい" />

    <Button
        android:id="@+id/husansuu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/hukokugo"
        android:layout_below="@+id/hukokugo"
        android:layout_marginRight="14dp"
        android:layout_marginTop="17dp"
        android:background="#1E90FF"
        android:minHeight="60dp"
        android:minWidth="100dp"
        android:text="さんすう" />

    <Button
        android:id="@+id/huzenbu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/husyakai"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/husyakai"
        android:background="#F4A460"
        android:minHeight="60dp"
        android:minWidth="100dp"
        android:text="ぜんぶ" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/husansuu"
        android:layout_alignTop="@+id/modoru8"
        android:text="きょうかをえらんでね"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
